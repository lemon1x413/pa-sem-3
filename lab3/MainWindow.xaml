<Window x:Class="lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab3"
        mc:Ignorable="d"
        Title="Dots and Boxes" Height="800" Width="900" MinHeight="800" MinWidth="900"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Game Board -->
        <Canvas x:Name="GameCanvas" Grid.Column="0" Background="White" Margin="20"/>

        <!-- Right Panel -->
        <StackPanel Grid.Column="1" Background="#E8E8E8" Margin="15">
            <TextBlock Text="Dots and Boxes" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

            <!-- Difficulty Selection -->
            <TextBlock Text="Difficulty:" FontWeight="Bold" Foreground="#333" Margin="0,0,0,8"/>
            <StackPanel Margin="0,0,0,15">
                <RadioButton x:Name="EasyRadio" Content="Easy" Foreground="#333" Margin="0,5" 
                             Checked="DifficultyChanged" Tag="Easy"/>
                <RadioButton x:Name="MediumRadio" Content="Medium" Foreground="#333" Margin="0,5" 
                             IsChecked="True" Checked="DifficultyChanged" Tag="Medium"/>
                <RadioButton x:Name="HardRadio" Content="Hard" Foreground="#333" Margin="0,5" 
                             Checked="DifficultyChanged" Tag="Hard"/>
            </StackPanel>

            <!-- Score Display -->
            <Border Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Score" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="You:" Foreground="#666" FontSize="12"/>
                        <TextBlock x:Name="HumanScoreText" Text="0" FontSize="18" FontWeight="Bold" Foreground="#2196F3"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Computer:" Foreground="#666" FontSize="12"/>
                        <TextBlock x:Name="ComputerScoreText" Text="0" FontSize="18" FontWeight="Bold" Foreground="#F44336"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Current Player -->
            <Border Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Current Turn:" FontWeight="Bold" Foreground="#333" Margin="0,0,0,8"/>
                    <TextBlock x:Name="CurrentPlayerText" Text="Your Turn" FontSize="14" FontWeight="Bold" Foreground="#2196F3"/>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <Button x:Name="NewGameButton" Content="New Game" Click="NewGameClick" 
                    Background="#4CAF50" Foreground="White" Padding="10,8" 
                    FontWeight="Bold" Margin="0,0,0,10" Cursor="Hand"/>
            
            <!-- Status -->
            <TextBlock x:Name="StatusText" Text="Ready to play!" Foreground="#666" 
                       Margin="0,20,0,0" TextWrapping="Wrap" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>
