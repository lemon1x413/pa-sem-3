<Window x:Class="lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="Sparse Index Database - Lab 4" Height="800" Width="1200"
        Background="#F5F5F5">
    <DockPanel>
        <!-- Top Menu Bar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#2C3E50" Height="50" VerticalAlignment="Center">
            <Button Content="New Database" Click="NewDatabase_Click" Padding="10,5" Margin="5" Background="#3498DB" Foreground="White" FontWeight="Bold"/>
            <Button Content="Load Database" Click="LoadDatabase_Click" Padding="10,5" Margin="5" Background="#27AE60" Foreground="White" FontWeight="Bold"/>
            <Button Content="Save Database" Click="SaveDatabase_Click" Padding="10,5" Margin="5" Background="#E74C3C" Foreground="White" FontWeight="Bold"/>
            <Separator Margin="10,0" Background="#34495E" Width="2"/>
            <Button Content="Performance Test (10K)" Click="PerformanceTest_Click" Padding="10,5" Margin="5" Background="#9B59B6" Foreground="White" FontWeight="Bold"/>
            <Button Content="Clear All" Click="ClearAll_Click" Padding="10,5" Margin="5" Background="#95A5A6" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Controls -->
            <Border Grid.Column="0" Margin="10" Background="White" CornerRadius="5">
                <StackPanel Margin="15">
                    <TextBlock Text="DATABASE OPERATIONS" FontSize="14" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2C3E50"/>

                    <!-- Search Section -->
                    <TextBlock Text="Search Record" FontSize="12" FontWeight="Bold" Margin="0,10,0,5" Foreground="#34495E"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="SearchKeyTextBox" Padding="8" Width="150" VerticalAlignment="Center" Text=""/>
                        <Button Content="Search" Click="Search_Click" Padding="10,5" Margin="5,0,0,0" Background="#3498DB" Foreground="White"/>
                    </StackPanel>
                    <TextBlock x:Name="SearchResultTextBlock" Text="No search performed" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <Separator Margin="0,10" Background="#BDC3C7"/>

                    <!-- Add Section -->
                    <TextBlock Text="Add Record" FontSize="12" FontWeight="Bold" Margin="0,10,0,5" Foreground="#34495E"/>
                    <TextBlock Text="Key:" FontSize="10" Margin="0,5,0,2"/>
                    <TextBox x:Name="AddKeyTextBox" Padding="8" Margin="0,0,0,8" Text=""/>
                    <TextBlock Text="Data:" FontSize="10" Margin="0,5,0,2"/>
                    <TextBox x:Name="AddDataTextBox" Padding="8" Height="60" TextWrapping="Wrap" Margin="0,0,0,8" Text=""/>
                    <Button Content="Add Record" Click="Add_Click" Padding="10,8" Background="#27AE60" Foreground="White" FontWeight="Bold"/>

                    <Separator Margin="0,10" Background="#BDC3C7"/>

                    <!-- Edit Section -->
                    <TextBlock Text="Edit Record" FontSize="12" FontWeight="Bold" Margin="0,10,0,5" Foreground="#34495E"/>
                    <TextBlock Text="Key:" FontSize="10" Margin="0,5,0,2"/>
                    <TextBox x:Name="EditKeyTextBox" Padding="8" Margin="0,0,0,8" Text=""/>
                    <TextBlock Text="New Data:" FontSize="10" Margin="0,5,0,2"/>
                    <TextBox x:Name="EditDataTextBox" Padding="8" Height="60" TextWrapping="Wrap" Margin="0,0,0,8" Text=""/>
                    <Button Content="Update Record" Click="Edit_Click" Padding="10,8" Background="#F39C12" Foreground="White" FontWeight="Bold"/>

                    <Separator Margin="0,10" Background="#BDC3C7"/>

                    <!-- Delete Section -->
                    <TextBlock Text="Delete Record" FontSize="12" FontWeight="Bold" Margin="0,10,0,5" Foreground="#34495E"/>
                    <TextBlock Text="Key:" FontSize="10" Margin="0,5,0,2"/>
                    <TextBox x:Name="DeleteKeyTextBox" Padding="8" Margin="0,0,0,8" Text=""/>
                    <Button Content="Delete Record" Click="Delete_Click" Padding="10,8" Background="#E74C3C" Foreground="White" FontWeight="Bold"/>

                    <!-- Status -->
                    <Separator Margin="0,15" Background="#BDC3C7"/>
                    <TextBlock Text="Status:" FontSize="10" FontWeight="Bold" Margin="0,10,0,5"/>
                    <TextBlock x:Name="StatusTextBlock" Text="Ready" FontSize="9" Foreground="#27AE60" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Center Panel: Data Visualization -->
            <Border Grid.Column="1" Margin="10" Background="White" CornerRadius="5">
                <StackPanel Margin="15">
                    <TextBlock Text="DATA STRUCTURE VISUALIZATION" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                    <TextBlock Text="Records in Database" FontSize="11" FontWeight="Bold" Margin="0,0,0,5" Foreground="#34495E"/>
                    <ListBox x:Name="RecordsListBox" Height="350" Margin="0,0,0,10" Background="#ECF0F1" Padding="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="10" Foreground="#2C3E50"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="Index Entries (Sparse)" FontSize="11" FontWeight="Bold" Margin="0,10,0,5" Foreground="#34495E"/>
                    <ListBox x:Name="IndexListBox" Height="150" Background="#ECF0F1" Padding="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="9" Foreground="#7F8C8D"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Right Panel: Statistics and Info -->
            <Border Grid.Column="2" Margin="10" Background="White" CornerRadius="5">
                <StackPanel Margin="15">
                    <TextBlock Text="STATISTICS" FontSize="14" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2C3E50"/>

                    <TextBlock Text="Database Info" FontSize="11" FontWeight="Bold" Margin="0,0,0,8" Foreground="#34495E"/>
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Margin="0,3">
                            <Run Text="Total Records: " FontWeight="Bold"/><Run x:Name="TotalRecordsRun" Text="0"/>
                        </TextBlock>
                        <TextBlock Margin="0,3">
                            <Run Text="Main Index Size: " FontWeight="Bold"/><Run x:Name="IndexSizeRun" Text="0"/>
                        </TextBlock>
                        <TextBlock Margin="0,3">
                            <Run Text="Overflow Records: " FontWeight="Bold"/><Run x:Name="OverflowRun" Text="0"/>
                        </TextBlock>
                    </StackPanel>

                    <Separator Margin="0,10" Background="#BDC3C7"/>

                    <TextBlock Text="Last Search Stats" FontSize="11" FontWeight="Bold" Margin="0,10,0,8" Foreground="#34495E"/>
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Margin="0,3">
                            <Run Text="Comparisons: " FontWeight="Bold"/><Run x:Name="ComparisonsRun" Text="0"/>
                        </TextBlock>
                        <TextBlock Margin="0,3">
                            <Run Text="Status: " FontWeight="Bold"/><Run x:Name="SearchStatusRun" Text="None"/>
                        </TextBlock>
                    </StackPanel>

                    <Separator Margin="0,10" Background="#BDC3C7"/>

                    <TextBlock Text="Performance Report" FontSize="11" FontWeight="Bold" Margin="0,10,0,8" Foreground="#34495E"/>
                    <TextBox x:Name="PerformanceReportTextBox" Height="300" IsReadOnly="True" Padding="8" FontSize="9" FontFamily="Courier New" Background="#ECF0F1" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
